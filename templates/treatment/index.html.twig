{% extends 'base.html.twig' %}

{% block title %}Traitement des données{% endblock %}

{% block stylesheets %}
    {% include 'theme/link.html.twig' %}
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Affichage des données traitées</h1>

    <!-- Affichage des messages d'erreur (flash) -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-4">
            {{ message }}
        </div>
    {% endfor %}

    <!-- Tableau des données -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    {% for column in selected_columns %}
                        <th>{{ column }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for row in filtered_data %}
                    <tr>
                        {% for cell in row %}
                            <td>{{ cell|default('&nbsp;') }}</td>  {# Si la cellule est vide, afficher un espace blanc #}
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bouton de retour -->
    <form action="{{ path('app_display') }}" method="get" class="mt-4">
        <button class="btn btn-light-warning" type="submit">Retour à l'Affichage</button>
    </form>
</div>
{% endblock %}
